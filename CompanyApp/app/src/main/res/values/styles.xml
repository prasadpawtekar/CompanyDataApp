<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!--Action bar backward compatibility-->
        <item name="buttonStyle">@style/psButton</item>
        <item name="actionBarStyle">@style/MyActionBar</item>

        <item name="android:buttonStyle">@style/psButton</item>
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:colorBackground">@color/main_container_background</item>
    </style>

    <style name="psButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/selector_button</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:paddingRight">@dimen/common_padding</item>
        <item name="android:paddingLeft">@dimen/common_padding</item>
        <item name="android:paddingTop">@dimen/common_padding_small</item>
        <item name="android:paddingBottom">@dimen/common_padding_small</item>
    </style>
    <style name="MyActionBar" parent="@style/Widget.AppCompat.Toolbar">
        <item name="android:background">@drawable/toolbar_background</item>
        <item name="android:titleTextStyle">@style/MyTitleStyle</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_back</item>

        <item name="background">@drawable/toolbar_background</item>
        <item name="titleTextStyle">@style/MyTitleStyle</item>
        <item name="homeAsUpIndicator">@drawable/ic_back</item>
    </style>
    <style name="MyTitleStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:foregroundGravity">center_horizontal</item>
    </style>
    <dimen name="common_padding_small">8dp</dimen>
</resources>
